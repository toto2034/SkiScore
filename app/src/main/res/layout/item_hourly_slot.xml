<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="4dp"
    android:background="@drawable/bg_detail_card"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="14dp">

    <!-- Time -->
    <TextView
        android:id="@+id/tv_hourly_time"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:textColor="@color/ice_blue"
        android:textSize="14sp"
        android:textStyle="bold" />

    <!-- Weather emoji -->
    <TextView
        android:id="@+id/tv_hourly_emoji"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:gravity="center" />

    <!-- Description (Italian from OWM lang=it) -->
    <TextView
        android:id="@+id/tv_hourly_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="8dp"
        android:textColor="@color/snow_white"
        android:textSize="13sp"
        android:maxLines="1"
        android:ellipsize="end" />

    <!-- Temperature -->
    <TextView
        android:id="@+id/tv_hourly_temp"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textColor="@color/snow_white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="end" />

    <!-- Snow indicator (shown only if snow > 0) -->
    <TextView
        android:id="@+id/tv_hourly_snow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/neon_cyan"
        android:textSize="12sp"
        android:visibility="gone" />

    <!-- Wind -->
    <TextView
        android:id="@+id/tv_hourly_wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/ice_blue_50"
        android:textSize="12sp" />

</LinearLayout>
